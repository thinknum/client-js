{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,

    "rootDir": "src",
    "sourceMap": true,

    "experimentalDecorators": true,

    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "removeComments": false,
    "noEmitHelpers": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
